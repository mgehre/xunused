// This is an LLVM-style lit test that uses FileCheck.
//
// RUN: rm -rf %t && mkdir -p %t
// RUN: split-file %s %t
// RUN: sed -e "s|TESTDIR|%t|g" %t/compile_commands.json.in > %t/compile_commands.json
// RUN: xunused --report-functions %t/compile_commands.json 2>&1 | FileCheck %s
// CHECK: Function 'operator new' uses=1

//--- global-new.cc
#include <cstddef>
#include <stdlib.h>
#include <new>
void* operator new(size_t size) { return malloc(size); }
int main() { auto v = new int(5); return 0; }

//--- compile_commands.json.in
[
  {
    "directory": "TESTDIR",
    "command": "cc -c TESTDIR/global-new.cc",
    "file": "TESTDIR/global-new.cc"
  }
]
